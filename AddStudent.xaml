<Window x:Class="ListViewApp.AddStudent"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ListViewApp"
        mc:Ignorable="d"
        Title="AddStudent" Height="366" Width="547">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label x:Name="labelName" Content="Imię" HorizontalAlignment="Left" Margin="44,28,0,0" VerticalAlignment="Top" Height="26" Width="33"/>
        <TextBox x:Name="strName" HorizontalAlignment="Left" Margin="130,32,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Height="18"/>

        <Label x:Name="labelSecName" Content="Drugie imię" HorizontalAlignment="Left" Margin="288,28,0,0" VerticalAlignment="Top" Height="26" Width="71"/>
        <TextBox x:Name="strSecName" HorizontalAlignment="Left" Margin="374,32,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Height="18"/>


        <Label x:Name="labelSurname" Content="Nazwisko" HorizontalAlignment="Left" Margin="44,58,0,0" VerticalAlignment="Top" Height="26" Width="60"/>
        <TextBox x:Name="strSurname" HorizontalAlignment="Left" Margin="130,62,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Height="18"/>

        <Label x:Name="labelPESEL" Content="PESEL" HorizontalAlignment="Left" Margin="44,88,0,0" VerticalAlignment="Top" Height="26" Width="41"/>
        <TextBox x:Name="strPESEL" HorizontalAlignment="Left" Margin="130,92,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Height="18"/>

        <Label x:Name="labelDate" Content="Data urodzenia" HorizontalAlignment="Left" Margin="44,118,0,0" VerticalAlignment="Top" Height="26" Width="91"/>
        <DatePicker x:Name="dataUrodzenia" HorizontalAlignment="Left" Margin="146,120,0,0" VerticalAlignment="Top" Height="24" Width="104"/>
        <Button x:Name="btnSave" Content="Zapisz" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="55" Click="btnSave_Click" Margin="0,0,10,10"/>

    </Grid>
</Window>
